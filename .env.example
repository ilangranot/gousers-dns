# ── Local environment (docker-compose) ────────────────────────────────────────
# Copy to .env and fill in values. Never commit .env to version control.
# Prod uses AWS Secrets Manager — see infrastructure/terraform/secrets.tf

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/aigateway

# Redis
REDIS_URL=redis://redis:6379

# Clerk — server-side (https://clerk.com → API Keys)
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk — client-side (baked into Next.js build)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# API URL visible to the browser (local docker-compose)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Allowed CORS origins for the API
CORS_ORIGINS=http://localhost:3000

# Encryption key for GPT API keys (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# Ollama
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# App
APP_ENV=local
